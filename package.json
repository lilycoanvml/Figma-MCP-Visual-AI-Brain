{
  "name": "figma-visual-brain",
  "version": "1.0.0",
  "private": true,
  "description": "Figma brand compliance analysis - MCP Server + Plugin",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:mcp": "npm run build -w packages/mcp-server",
    "build:plugin": "npm run build -w packages/figma-plugin",
    "build:shared": "npm run build -w packages/shared",
    "dev:mcp": "npm run dev -w packages/mcp-server",
    "clean": "rm -rf packages/*/build packages/*/dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
